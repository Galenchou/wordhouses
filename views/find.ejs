<!DOCTYPE html>
<html>
  <head>
   
    <title>find</title>
    <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    
  </head>
  <body>

    <% include index %>
  	<div class="container">
      
      

      <div class="row">
        
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <form method="post" name="find" action="/findword">
                
                <div class="row">

                  <div class="col-md-6">
                     <input type="text" name="inputWord" class="form-control" onkeyup="validate()">
                  </div>
                  <div class="col-md-2">
                      <select class="form-control" name="select">
                          <%for(var i=0;i<typeArray.length;i++){ %>
                          
                          <option value=<%=typeArray[i].wordType%>>
                            <%=typeArray[i].wordType%>
                          </option>

                          <%}%>
                      </select>
                  </div>
                  <div class="col-md-1">
                      <input type="submit" class="btn btn-primary" disabled value="search" >
                  </div>
                  
                 

                </div>

            </form>
        </div>
        <div class="col-2"></div>
      </div>

  	</div>
      
      <script type="text/javascript">
          function validate(){
              if($("input[type=text]").val()!=""){
                 $("input[type=submit]").prop("disabled",false);
              }
          }

      </script>
  </body>
</html>
